<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch - Shopping</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 h-screen flex flex-col">

    <!-- Navbar -->
    <nav class="bg-white shadow-md py-4">
        <div class="container mx-auto flex justify-between items-center px-10">
            <h3 class="text-2xl font-bold text-blue-600">Scatch</h3>
            <div class="flex gap-6 font-semibold">
                <a href="/shop" class="text-blue-600 font-bold">Shop</a>
                <a href="/cart" class="hover:text-blue-600">Cart</a>
                <a href="/account" class="hover:text-blue-600">My Account</a>
                <a href="/users/logout" class="text-red-600 hover:text-red-700">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Main Layout -->
    <div class="flex flex-grow mt-5 px-10 overflow-hidden">
        
        <!-- Sidebar (Filters) -->
        <aside class="bg-white shadow-md rounded-lg p-6 w-72 h-fit sticky top-5">
            <h2 class="text-lg font-semibold">Filters</h2>
            
            <form id="filterForm" method="GET" action="/shop">
                <div class="mt-4">
                    <label for="sort" class="block font-medium">Sort By</label>
                    <select name="sort" id="sort" class="border border-gray-300 rounded-md py-2 px-3 w-full mt-1">
                        <option value="">Select</option>
                      
                        <option value="latest">Latest</option>
                        <option value="low">Price: Low to High</option>
                        <option value="high">Price: High to Low</option>
                    </select>
                </div>

                <div class="mt-4">
                    <h3 class="font-semibold">Price Range</h3>
                    <input type="number" name="minPrice" placeholder="Min" class="border w-full px-3 py-2 mt-2">
                    <input type="number" name="maxPrice" placeholder="Max" class="border w-full px-3 py-2 mt-2">
                </div>

                <div class="mt-4">
                    <input type="text" name="search" placeholder="Search products..." class="border w-full px-3 py-2">
                </div>

                <button type="submit" class="mt-4 bg-blue-600 text-white w-full py-2 rounded-lg hover:bg-blue-700 transition">
                    Apply Filters
                </button>
            </form>
        </aside>

        <!-- Product Section -->
        <section class="ml-10 flex-1 flex flex-col">
            <!-- Title (Fixed) -->
            <h2 class="text-xl font-semibold mb-5 bg-white p-4 shadow-md sticky top-0 z-10">
                Products
            </h2>
            
            <!-- Scrollable Products -->
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 flex-1 overflow-y-auto max-h-screen pr-2">
                <% products.forEach(product => { %>
                    <div class="bg-white shadow-lg rounded-lg p-4">
                        <div class="h-30 bg-gray-100 rounded-lg overflow-hidden">
                            <img src="data:image/png;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>" class="w-full h-30 object-cover">
                        </div>
                        <div class="mt-3">
                            <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>
                            <p class="text-gray-600 line-through">$<%= product.price %></p>
                            <p class="text-green-500">$<%= product.discount %></p>
                            
                        </div>
                        <a href="/addtocart/<%= product._id %>">
                            <button class="mt-4 bg-blue-600 text-white w-full py-2 rounded-lg hover:bg-blue-700 transition">
                                Add to Cart
                            </button>
                        </a>
                    </div>
                <% }); %>
            </div>
        </section>
    </div>

</body>
</html>
